---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import PageShell from '../components/PageShell.astro';
import ProjectCard from '../components/ProjectCard.astro';
import SectionHeading from '../components/SectionHeading.astro';

const projects = (await getCollection('projects')).sort(
  (a, b) => (a.data.order ?? 99) - (b.data.order ?? 99)
);
---

<Layout title="Projects | Jitchaya Veerachodthada">
  <PageShell>
    <SectionHeading
      title="My Projects"
      subtitle="A collection of my recent work spanning UI/UX design, branding, and digital illustration."
    />

    <!-- Project Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
      {projects.map((project) => (
        <ProjectCard
          title={project.data.title}
          description={project.data.description}
          image={project.data.image}
          tags={project.data.tags}
          link={project.data.link}
          demoUrl={project.data.demoUrl}
          sourceUrl={project.data.sourceUrl}
          dateRange={project.data.dateRange}
        />
      ))}
    </div>
  </PageShell>
</Layout>
