---
import Layout from '../layouts/Layout.astro';
---

<Layout title="500 â€” Server Error">
  <main class="grow flex flex-col w-full">
    <section class="flex flex-col items-center justify-center min-h-[calc(100vh-100px)] text-center">
      <!-- Error Code -->
      <span class="text-[14rem] md:text-[20rem] font-bold leading-none tracking-tighter text-slate-100 dark:text-slate-800/60 select-none">
        500
      </span>

      <!-- Title -->
      <h1 class="text-2xl md:text-4xl font-bold tracking-tight -mt-8 mb-4">
        Internal Server Error
      </h1>

      <!-- Description -->
      <p class="text-slate-500 dark:text-slate-400 text-base md:text-lg max-w-md leading-relaxed mb-10">
        Something went wrong on the server. Please try again later or head back to the homepage.
      </p>

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row items-center gap-4">
        <a
          href="/"
          class="inline-flex items-center gap-2 bg-primary hover:opacity-90 transition-opacity text-slate-900 font-bold px-8 py-4 rounded-xl shadow-lg shadow-primary/20"
        >
          <span class="material-symbols-outlined text-[20px]">arrow_back</span>
          Return Home
        </a>
        <button
          onclick="window.location.reload()"
          class="inline-flex items-center gap-2 px-8 py-4 rounded-xl bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 font-medium hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors cursor-pointer"
        >
          <span class="material-symbols-outlined text-[20px]">refresh</span>
          Try Again
        </button>
      </div>
    </section>
  </main>
</Layout>
