---
interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  link?: string;
}

const { title, description, image, tags, link = '#' } = Astro.props;
---

<a
  href={link}
  class="group block bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-2xl overflow-hidden shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
>
  <!-- Thumbnail -->
  <div class="relative overflow-hidden aspect-[3/2]">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
    />
  </div>

  <!-- Content -->
  <div class="p-5">
    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-3">
      {tags.map((tag) => (
        <span class="text-xs font-medium px-3 py-1 rounded-full bg-primary/20 text-slate-700 dark:text-slate-300">
          {tag}
        </span>
      ))}
    </div>

    <!-- Title & Description -->
    <div class="flex items-start justify-between gap-3">
      <div>
        <h3 class="font-bold text-lg mb-1 group-hover:text-primary transition-colors">
          {title}
        </h3>
        <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed">
          {description}
        </p>
      </div>
      <span class="material-symbols-outlined text-slate-400 group-hover:text-primary group-hover:translate-x-1 transition-all mt-1 shrink-0">
        arrow_forward
      </span>
    </div>
  </div>
</a>

