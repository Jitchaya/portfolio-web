---
import SectionHeading from './SectionHeading.astro';

const skills = [
  { icon: 'brush', label: 'UI/UX Design', description: 'Creating intuitive and visually appealing user interfaces with a focus on user experience.' },
  { icon: 'code', label: 'Frontend Development', description: 'Building responsive, performant web applications with modern frameworks and tools.' },
  { icon: 'palette', label: 'Illustration', description: 'Crafting unique digital illustrations and visual assets for brands and products.' },
  { icon: 'branding_watermark', label: 'Branding', description: 'Developing cohesive brand identities that communicate a clear message.' },
];

const experience = [
  { year: '2024 — Present', role: 'Senior UI/UX Designer', company: 'Freelance' },
  { year: '2022 — 2024', role: 'Frontend Developer', company: 'Creative Agency' },
  { year: '2020 — 2022', role: 'Junior Designer', company: 'Design Studio' },
];
---

<div>
  <!-- Section Heading -->
  <div class="mb-8">
    <span class="text-sm font-semibold text-primary uppercase tracking-widest mb-2 block">About Me</span>
    <h2 class="text-3xl md:text-4xl font-bold tracking-tight">About Me</h2>
  </div>

  <!-- Bio -->
  <div class="mb-10">
    <p class="text-slate-600 dark:text-slate-300 leading-relaxed text-base md:text-lg">
      My toolkit revolves around <strong>UI/UX Design and Frontend Development</strong>. I enjoy crafting everything from
      robust interfaces and full-stack applications to open-source tools and creative digital products.
    </p>
    <p class="text-slate-600 dark:text-slate-300 leading-relaxed text-base md:text-lg mt-4">
      When I'm not pushing pixels or writing code, you'll find me exploring new art styles, experimenting with
      3D illustration, or hunting for the perfect cup of coffee.
    </p>
  </div>

  <!-- Skills -->
  <div class="mb-12">
    <h3 class="text-2xl font-bold tracking-tight mb-6">What I Do</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
      {skills.map((skill) => (
        <div class="bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-2xl p-6 shadow-sm hover:shadow-md hover:-translate-y-0.5 transition-all duration-300 group">
          <div class="w-12 h-12 rounded-xl bg-primary/20 flex items-center justify-center mb-4 group-hover:bg-primary transition-colors">
            <span class="material-symbols-outlined text-slate-700 dark:text-slate-300 group-hover:text-slate-900 transition-colors">
              {skill.icon}
            </span>
          </div>
          <h4 class="font-bold text-lg mb-2">{skill.label}</h4>
          <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed">
            {skill.description}
          </p>
        </div>
      ))}
    </div>
  </div>

  <!-- Experience -->
  <div>
    <h3 class="text-2xl font-bold tracking-tight mb-6">Experience</h3>
    <div class="space-y-4">
      {experience.map((item) => (
        <div class="bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-2xl p-5 md:p-6 shadow-sm flex flex-col md:flex-row md:items-center gap-2 md:gap-6">
          <span class="text-sm font-medium text-primary shrink-0 min-w-35">
            {item.year}
          </span>
          <div>
            <h4 class="font-bold">{item.role}</h4>
            <p class="text-sm text-slate-500 dark:text-slate-400">{item.company}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>
