---
const skills = [
  { icon: 'code', label: 'Frontend Development', description: 'Building responsive, performant web applications with modern frameworks and tools.' },
  { icon: 'terminal', label: 'Backend Development', description: 'Designing and developing scalable server-side applications and RESTful APIs.' },
  { icon: 'storage', label: 'Database Management', description: 'Working with relational and NoSQL databases to manage and optimize data.' },
  { icon: 'cloud', label: 'DevOps & Cloud', description: 'Deploying and maintaining applications using cloud services and CI/CD pipelines.' },
];

const experience = [
  {
    year: 'May 2024 — Present',
    role: 'Software Engineer (Full-time)',
    company: 'SCB (Siam Commercial Bank)',
    description: 'Developing and maintaining enterprise-level banking applications and microservices.',
    icon: 'rocket_launch',
    current: true,
  },
  {
    year: 'Nov 2023 — Apr 2024',
    role: 'Software Engineer (Co-op)',
    company: 'SCB (Siam Commercial Bank)',
    description: 'Contributed to full-stack development projects during co-operative education program.',
    icon: 'engineering',
    current: false,
  },
  {
    year: 'Apr 2023 — Jul 2023',
    role: 'ERP Developer (Intern)',
    company: 'Alphametrics',
    description: 'Built and customized ERP modules to streamline business operations.',
    icon: 'work',
    current: false,
  },
];
---

<div>
  <!-- Section Heading -->
  <div class="mb-8">
    <span class="text-sm font-semibold text-primary uppercase tracking-widest mb-2 block">About Me</span>
    <h2 class="text-3xl md:text-4xl font-bold tracking-tight">About Me</h2>
  </div>

  <!-- Bio -->
  <div class="mb-10">
    <p class="text-slate-600 dark:text-slate-300 leading-relaxed text-base md:text-lg">
      I am a <strong>Software Engineer</strong> graduated from Khon Kaen University, College of Computing, Department of Computer Science.
      I enjoy building robust applications, from frontend interfaces to backend systems and full-stack solutions.
    </p>
    <p class="text-slate-600 dark:text-slate-300 leading-relaxed text-base md:text-lg mt-4">
      I have 6 months of co-operative education experience as a Software Engineer at SCB (Siam Commercial Bank)
      and 3 months of internship experience as an ERP Developer.
    </p>
  </div>

  <!-- Skills -->
  <div class="mb-12">
    <h3 class="text-2xl font-bold tracking-tight mb-6">What I Do</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
      {skills.map((skill) => (
        <div class="bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-2xl p-6 shadow-sm hover:shadow-md hover:-translate-y-0.5 transition-all duration-300 group">
          <div class="w-12 h-12 rounded-xl bg-primary/20 flex items-center justify-center mb-4 group-hover:bg-primary transition-colors">
            <span class="material-symbols-outlined text-slate-700 dark:text-slate-300 group-hover:text-slate-900 transition-colors">
              {skill.icon}
            </span>
          </div>
          <h4 class="font-bold text-lg mb-2">{skill.label}</h4>
          <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed">
            {skill.description}
          </p>
        </div>
      ))}
    </div>
  </div>

  <!-- Experience -->
  <div>
    <h3 class="text-2xl font-bold tracking-tight mb-6 md:text-center">Experience</h3>
    <ul class="timeline timeline-vertical max-md:timeline-compact">
      {experience.map((item, index) => {
        const isLeft = index % 2 === 0;
        const cardContent = (
          <div class="bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-2xl p-5 shadow-sm hover:shadow-md hover:-translate-y-0.5 transition-all duration-300 group">
            <div class="flex flex-wrap items-center gap-2 mb-2">
              <span class="inline-flex items-center gap-1.5 text-xs font-semibold text-primary">
                <span class="material-symbols-outlined text-[14px]">calendar_today</span>
                {item.year}
              </span>
              {item.current && (
                <span class="badge badge-primary badge-sm badge-soft gap-1">
                  <span class="w-1.5 h-1.5 rounded-full bg-primary animate-pulse"></span>
                  Current
                </span>
              )}
            </div>
            <h4 class="font-bold text-base md:text-lg mb-1 group-hover:text-primary transition-colors">{item.role}</h4>
            <p class="text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">
              <span class="material-symbols-outlined text-[14px] align-text-bottom mr-1">apartment</span>
              {item.company}
            </p>
            <p class="text-sm text-slate-400 dark:text-slate-500 leading-relaxed">{item.description}</p>
          </div>
        );
        return (
          <li>
            {index > 0 && <hr class="bg-primary/40" />}
            <div class:list={['timeline-start mb-6', isLeft ? '' : 'md:text-end']}>
              {isLeft ? cardContent : <Fragment />}
            </div>
            <div class="timeline-middle">
              <div class:list={[
                'w-10 h-10 rounded-full flex items-center justify-center shadow-md',
                item.current
                  ? 'bg-primary ring-4 ring-primary/25 animate-pulse'
                  : 'bg-card-light dark:bg-card-dark border-2 border-primary/50'
              ]}>
                <span class:list={[
                  'material-symbols-outlined text-[20px]',
                  item.current ? 'text-primary-content' : 'text-primary'
                ]}>
                  {item.icon}
                </span>
              </div>
            </div>
            <div class="timeline-end mb-6">
              {isLeft ? <Fragment /> : cardContent}
            </div>
            {index < experience.length - 1 && <hr class="bg-primary/40" />}
          </li>
        );
      })}
    </ul>
  </div>
</div>
