---
import TagBadge from './TagBadge.astro';
import { formatDate } from '../utils/date';

interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
  image?: string;
  slug: string;
}

const { title, description, date, tags, image, slug } = Astro.props;

const formattedDate = formatDate(date);
---

<a
  href={`/blog/${slug}`}
  class="group block bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-2xl overflow-hidden shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
>
  {/* Thumbnail (optional) */}
  {image && (
    <div class="relative overflow-hidden aspect-3/2">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
      />
    </div>
  )}

  {/* Content */}
  <div class="p-5">
    {/* Title */}
    <h3 class="font-bold text-lg mb-1 group-hover:text-primary transition-colors">
      {title}
    </h3>

    {/* Date */}
    <div class="flex items-center gap-2 mb-3">
      <span class="material-symbols-outlined text-[16px] text-slate-400">calendar_today</span>
      <span class="text-xs font-medium text-slate-500 dark:text-slate-400">{formattedDate}</span>
    </div>

    {/* Description */}
    <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed mb-4">
      {description}
    </p>

    {/* Tags */}
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <TagBadge tag={tag} />
      ))}
    </div>
  </div>
</a>
