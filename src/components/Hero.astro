---
import SocialLinks from './SocialLinks.astro';
import heroImage from '../assets/hero/me.jpg';
---

<div class="flex flex-col md:flex-row items-center gap-10 md:gap-16 grow mb-12 lg:mb-0 relative">
  <!-- Avatar -->
  <div class="shrink-0">
    <div class="w-52 h-52 md:w-72 md:h-72 rounded-full overflow-hidden ring-4 ring-primary/30 bg-slate-100 dark:bg-slate-800">
      <img
        alt="Jitchaya Veerachodthada"
        class="w-full h-full object-cover grayscale-[0.2] hover:grayscale-0 transition-all duration-500"
        src={heroImage.src}
      />
    </div>
  </div>

  <!-- Text Content -->
  <div class="max-w-4xl text-center md:text-left">
    <!-- Greeting -->
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-4 leading-[1.2]">
      Hi, I'm <br/><span class="text-primary">Jitchaya Veerachodthada</span>
    </h1>

    <!-- Subtitle -->
    <p class="text-xl md:text-2xl text-slate-500 dark:text-slate-400 font-medium mb-6">
      Software Engineer
    </p>

    <!-- Location Badge -->
    <div
      class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-slate-100 dark:bg-slate-800 mb-8 border border-slate-200 dark:border-slate-700"
    >
      <span class="text-sm">ðŸ‡¹ðŸ‡­</span>
      <span class="text-sm font-medium text-slate-600 dark:text-slate-300">Thailand</span>
    </div>

    <!-- Bio -->
    <p class="text-base md:text-lg text-slate-600 dark:text-slate-300 leading-relaxed max-w-2xl mb-8">
      I am graduation at Khon Kaen University, College of Computing, Department of Computer Science
      I have 6 months of co-operative education experience as a Software Engineer at SCB (Siam Commercial Bank)
      and 3 months of internship experience as an ERP Developer.
    </p>

    <!-- Social / Connect Icons -->
    <div class="flex justify-center md:justify-start">
      <SocialLinks />
    </div>
  </div>
</div>
