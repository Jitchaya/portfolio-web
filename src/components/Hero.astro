<div class="flex flex-col justify-center grow mb-12 lg:mb-0 relative">
  <div class="max-w-4xl">
    <!-- Status Badge -->
    <div
      class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-100 dark:bg-slate-800 mb-6 border border-slate-200 dark:border-slate-800"
    >
      <span class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></span>
      <span class="text-xs font-medium text-slate-500 dark:text-slate-400">Let's meet!</span>
    </div>

    <!-- Heading -->
    <h1
      class="text-5xl md:text-7xl lg:text-8xl font-bold tracking-tight mb-12 leading-[1.1]"
    >
      I'm Jitchaya Veerachodthada <br />
      <span class="text-slate-400 dark:text-slate-500"
        >Digital designer and illustrator.</span
      >
    </h1>

    <!-- CTA Buttons -->
    <div class="flex flex-wrap items-center gap-6">
      <button
        class="bg-slate-900 dark:bg-card-dark text-white border border-slate-800 px-8 py-4 rounded-xl flex items-center gap-3 group hover:bg-primary hover:text-slate-900 transition-all"
      >
        My Works
        <span
          class="material-symbols-outlined transform group-hover:translate-x-1 transition-transform"
          >apps</span
        >
      </button>
      <button
        class="flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-primary transition-colors font-medium"
      >
        Download CV
        <span class="material-symbols-outlined">download</span>
      </button>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-4 right-0 lg:bottom-12 lg:right-12 hidden md:block">
    <div class="relative w-32 h-32 flex items-center justify-center">
      <svg class="w-full h-full scroll-indicator" viewBox="0 0 100 100">
        <defs>
          <path
            d="M 50, 50 m -37, 0 a 37,37 0 1,1 74,0 a 37,37 0 1,1 -74,0"
            id="textCircle"></path>
        </defs>
        <text
          class="fill-slate-400 dark:fill-slate-600 font-bold uppercase tracking-[0.2em] text-[8px]"
        >
          <textPath href="#textCircle"
            >Scroll For More &bull; Scroll For More &bull;
          </textPath>
        </text>
      </svg>
      <div class="absolute inset-0 flex items-center justify-center">
        <span class="material-symbols-outlined text-slate-400 animate-bounce"
          >arrow_downward</span
        >
      </div>
    </div>
  </div>
</div>

<!-- Mobile CTA -->
<button class="bg-primary text-slate-900 font-bold w-full py-4 rounded-xl sm:hidden mb-8">
  Let's Talk
</button>

