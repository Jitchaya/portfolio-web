---
import SocialLinks from './SocialLinks.astro';

const contactInfo = [
  { icon: 'mail', label: 'Email', value: 'hello@jitchaya.dev', href: 'mailto:hello@jitchaya.dev' },
  { icon: 'location_on', label: 'Location', value: 'Thailand', href: '#' },
  { icon: 'language', label: 'Website', value: 'jitchaya.dev', href: '#' },
];
---

<div>
  <!-- Want to Chat? CTA Banner -->
  <div class="bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-2xl p-8 md:p-12 mb-10 text-center shadow-sm">
    <h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-4">
      Want to chat? shoot me a dm
    </h2>
    <p class="text-slate-500 dark:text-slate-400 text-base md:text-lg max-w-xl mx-auto mb-6">
      with a direct question on <a href="#" class="text-primary font-semibold hover:underline">X (twitter)</a> and I'll respond whenever I can.
    </p>
    <SocialLinks />
  </div>

  <!-- Contact Form -->
  <div class="grid grid-cols-1 lg:grid-cols-5 gap-6">
    <div class="lg:col-span-3 bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-2xl p-6 md:p-8 shadow-sm">
      <h3 class="text-xl font-bold mb-6">Send a Message</h3>
      <form class="space-y-5">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
          <div>
            <label for="name" class="block text-sm font-semibold mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Your name"
              class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-800/60 border border-slate-200 dark:border-slate-700 text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-semibold mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="your@email.com"
              class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-800/60 border border-slate-200 dark:border-slate-700 text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
            />
          </div>
        </div>
        <div>
          <label for="subject" class="block text-sm font-semibold mb-2">Subject</label>
          <input
            type="text"
            id="subject"
            name="subject"
            placeholder="What's this about?"
            class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-800/60 border border-slate-200 dark:border-slate-700 text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
          />
        </div>
        <div>
          <label for="message" class="block text-sm font-semibold mb-2">Message</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            placeholder="Tell me about your project..."
            class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-800/60 border border-slate-200 dark:border-slate-700 text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all resize-none"
          ></textarea>
        </div>
        <button
          type="submit"
          class="w-full md:w-auto bg-primary hover:opacity-90 transition-opacity text-slate-900 font-bold px-8 py-4 rounded-xl flex items-center justify-center gap-2"
        >
          Send Message
          <span class="material-symbols-outlined text-[18px]">send</span>
        </button>
      </form>
    </div>

    <!-- Contact Info -->
    <div class="lg:col-span-2 flex flex-col gap-5">
      {contactInfo.map((info) => (
        <a
          href={info.href}
          class="bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-2xl p-6 shadow-sm hover:shadow-md hover:-translate-y-0.5 transition-all duration-300 group flex items-center gap-4"
        >
          <div class="w-12 h-12 rounded-xl bg-primary/20 flex items-center justify-center shrink-0 group-hover:bg-primary transition-colors">
            <span class="material-symbols-outlined text-slate-700 dark:text-slate-300 group-hover:text-slate-900 transition-colors">
              {info.icon}
            </span>
          </div>
          <div>
            <p class="text-xs text-slate-500 uppercase tracking-widest font-semibold mb-1">
              {info.label}
            </p>
            <p class="font-medium text-sm">{info.value}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</div>
