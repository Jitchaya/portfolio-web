---
const contactInfo = [
  { icon: 'mail', label: 'Email', value: 'hello@jitchaya.dev', href: 'mailto:hello@jitchaya.dev' },
  { icon: 'location_on', label: 'Location', value: 'Thailand', href: '#' },
  { icon: 'language', label: 'Website', value: 'jitchaya.dev', href: '#' },
];

const followLinks = [
  { icon: 'share', label: 'Twitter / X', href: '#' },
  { icon: 'code', label: 'GitHub', href: '#' },
  { icon: 'work', label: 'LinkedIn', href: '#' },
  { icon: 'photo_camera', label: 'Instagram', href: '#' },
];
---

<div class="space-y-8">
  <!-- Main Grid: Info Left + Form Right -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

    <!-- Left Column: Get in Touch Info -->
    <div class="flex flex-col gap-6">
      <!-- Header -->
      <div>
        <div class="inline-flex items-center gap-2 bg-primary/10 text-primary px-4 py-1.5 rounded-full text-sm font-semibold mb-4">
          <span class="material-symbols-outlined text-[16px]">waving_hand</span>
          Let's Connect
        </div>
        <h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-3">
          Get in Touch
        </h2>
        <p class="text-slate-500 dark:text-slate-400 text-base leading-relaxed max-w-md">
          Have a project in mind or just want to say hello? I'd love to hear from you. Drop me a message and I'll get back to you as soon as possible.
        </p>
      </div>

      <!-- Contact Info Cards -->
      <div class="flex flex-col gap-3">
        {contactInfo.map((info) => (
          <a
            href={info.href}
            class="bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-xl p-4 shadow-sm hover:shadow-md hover:border-primary/40 transition-all duration-300 group flex items-center gap-4"
          >
            <div class="w-11 h-11 rounded-lg bg-primary/15 flex items-center justify-center shrink-0 group-hover:bg-primary group-hover:scale-105 transition-all duration-300">
              <span class="material-symbols-outlined text-[20px] text-primary group-hover:text-slate-900 transition-colors">
                {info.icon}
              </span>
            </div>
            <div>
              <p class="text-[11px] text-slate-400 dark:text-slate-500 uppercase tracking-widest font-semibold">
                {info.label}
              </p>
              <p class="font-medium text-sm mt-0.5">{info.value}</p>
            </div>
            <span class="material-symbols-outlined text-[16px] text-slate-300 dark:text-slate-600 ml-auto group-hover:text-primary group-hover:translate-x-0.5 transition-all">
              arrow_forward
            </span>
          </a>
        ))}
      </div>

      <!-- Follow Me -->
      <div class="bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-xl p-5 shadow-sm">
        <p class="text-[11px] text-slate-400 dark:text-slate-500 uppercase tracking-widest font-semibold mb-3">
          Follow Me
        </p>
        <div class="flex gap-3">
          {followLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.label}
              class="w-10 h-10 rounded-lg bg-slate-100 dark:bg-slate-800 flex items-center justify-center hover:bg-primary hover:text-slate-900 hover:scale-110 transition-all duration-300"
            >
              <span class="material-symbols-outlined text-[18px]">{link.icon}</span>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Right Column: Contact Form -->
    <div class="bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 rounded-2xl p-6 md:p-8 shadow-sm">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-10 h-10 rounded-lg bg-primary/15 flex items-center justify-center">
          <span class="material-symbols-outlined text-[20px] text-primary">edit_note</span>
        </div>
        <div>
          <h3 class="text-lg font-bold">Send a Message</h3>
          <p class="text-xs text-slate-400 dark:text-slate-500">Fill out the form below</p>
        </div>
      </div>

      <form class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="name" class="block text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-1.5">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Your name"
              class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-800/60 border border-slate-200 dark:border-slate-700 text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all text-sm"
            />
          </div>
          <div>
            <label for="email" class="block text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-1.5">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="your@email.com"
              class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-800/60 border border-slate-200 dark:border-slate-700 text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all text-sm"
            />
          </div>
        </div>

        <div>
          <label for="subject" class="block text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-1.5">Subject</label>
          <input
            type="text"
            id="subject"
            name="subject"
            placeholder="What's this about?"
            class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-800/60 border border-slate-200 dark:border-slate-700 text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all text-sm"
          />
        </div>

        <div>
          <label for="message" class="block text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-1.5">Message</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            placeholder="Tell me about your project..."
            class="w-full px-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-800/60 border border-slate-200 dark:border-slate-700 text-slate-900 dark:text-slate-100 placeholder:text-slate-400 dark:placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all resize-none text-sm"
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full bg-primary hover:brightness-110 transition-all text-slate-900 font-bold px-8 py-3.5 rounded-xl flex items-center justify-center gap-2 shadow-lg shadow-primary/25 hover:shadow-primary/40 hover:-translate-y-0.5 duration-300"
        >
          Send Message
          <span class="material-symbols-outlined text-[18px]">send</span>
        </button>
      </form>
    </div>
  </div>
</div>
