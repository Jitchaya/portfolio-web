---
import SocialLinks from './SocialLinks.astro';
import heroImage from '../assets/hero/me.jpg';
---

<aside class="lg:w-[320px] lg:fixed lg:h-[calc(100vh-64px)] w-full shrink-0">
  <div
    class="bg-card-light dark:bg-card-dark border border-slate-200 dark:border-slate-800 h-full rounded-2xl p-6 flex flex-col shadow-xl"
  >
    <!-- Name & Logo -->
    <div class="flex items-center gap-3 mb-8">
      <div
        class="w-10 h-10 rounded-full bg-slate-900 dark:bg-white flex items-center justify-center"
      >
        <span class="material-symbols-outlined text-white dark:text-black">pets</span>
      </div>
      <div>
        <h2 class="font-bold text-xl leading-tight">Jitchaya</h2>
        <h2 class="font-bold text-xl leading-tight">Veerachodthada</h2>
      </div>
    </div>

    <!-- Avatar -->
    <div
      class="relative w-full aspect-square rounded-2xl overflow-hidden mb-8 bg-slate-100 dark:bg-slate-800"
    >
      <img
        alt="Jitchaya Veerachodthada"
        class="w-full h-full object-cover grayscale-[0.2] hover:grayscale-0 transition-all duration-500"
        src={heroImage.src}
      />
    </div>

    <!-- Info -->
    <div class="space-y-6 grow">
      <div>
        <p class="text-xs text-slate-500 uppercase tracking-widest font-semibold mb-2">
          Specialization:
        </p>
        <p class="text-sm font-medium leading-relaxed">
          UI/UX designer and<br />frontend developer
        </p>
      </div>
      <div>
        <p class="text-xs text-slate-500 uppercase tracking-widest font-semibold mb-2">
          Based In:
        </p>
        <p class="text-sm font-medium">Odesa, Ukraine</p>
      </div>
    </div>

    <!-- Social Links & CTA -->
    <div class="mt-8">
      <div class="mb-6">
        <SocialLinks />
      </div>
      <button
        class="w-full bg-primary hover:opacity-90 transition-opacity text-slate-900 font-bold py-4 rounded-xl flex items-center justify-center gap-2"
      >
        Let's Work Together!
      </button>
    </div>
  </div>
</aside>
